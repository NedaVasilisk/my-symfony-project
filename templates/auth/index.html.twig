{% extends 'base.html.twig' %}

{% block content %}
    <div class="min-h-[82vh] min-w-screen flex flex-col items-center justify-center dark:bg-gray-600 bg-white">
        <div class="w-full max-w-md dark:bg-gray-900 bg-white p-8 rounded-lg shadow-md">
            <div class="flex justify-center mb-6">
                <button
                        onclick="switchForm(true)"
                        id="login-btn"
                        class="w-1/2 py-2 text-lg font-semibold border-b-2 border-blue-500 text-blue-500">
                    Login
                </button>
                <button
                        onclick="switchForm(false)"
                        id="register-btn"
                        class="w-1/2 py-2 text-lg font-semibold border-b-2 border-gray-300 text-white">
                    Register
                </button>
            </div>

            <div id="login-form-container">
                <form id="login-form" class="space-y-4">
                    <div>
                        <label for="login-email" class="block dark:text-white text-gray-700">Email</label>
                        <input type="email" id="login-email" class="w-full px-4 py-2 border rounded-md dark:bg-gray-900 focus:outline-none" required>
                    </div>
                    <div>
                        <label for="login-password" class="block dark:text-white text-gray-700">Password</label>
                        <input type="password" id="login-password" class="w-full px-4 py-2 border rounded-md dark:bg-gray-900 focus:outline-none" required>
                    </div>
                    <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition">
                        Login
                    </button>
                </form>
            </div>

            <div id="register-form-container" class="hidden">
                <form id="register-form" class="space-y-5">
                    <div>
                        <label for="register-username" class="block dark:text-white text-gray-700">Username</label>
                        <input type="text" id="register-username" class="w-full px-4 py-2 border rounded-md dark:bg-gray-900 focus:outline-none" required>
                    </div>
                    <div>
                        <label for="register-email" class="block dark:text-white text-gray-700">Email</label>
                        <input type="email" id="register-email" class="w-full px-4 py-2 border rounded-md dark:bg-gray-900 focus:outline-none" required>
                    </div>
                    <div>
                        <label for="register-password" class="block dark:text-white text-gray-700">Password</label>
                        <input type="password" id="register-password" class="w-full px-4 py-2 border rounded-md dark:bg-gray-900 focus:outline-none" required>
                    </div>
                    <div>
                        <label for="register-firstName" class="block dark:text-white text-gray-700">First Name</label>
                        <input type="text" id="register-firstName" class="w-full px-4 py-2 border rounded-md dark:bg-gray-900 focus:outline-none" required>
                    </div>
                    <div>
                        <label for="register-lastName" class="block dark:text-white text-gray-700">Last Name</label>
                        <input type="text" id="register-lastName" class="w-full px-4 py-2 border rounded-md dark:bg-gray-900 focus:outline-none" required>
                    </div>
                    <button type="submit" class="w-full bg-green-500 text-white py-2 rounded-md hover:bg-green-600 transition">
                        Register
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function switchForm(isLogin) {
            const loginForm = document.getElementById('login-form-container');
            const registerForm = document.getElementById('register-form-container');
            const loginBtn = document.getElementById('login-btn');
            const registerBtn = document.getElementById('register-btn');

            if (isLogin) {
                loginForm.classList.remove('hidden');
                registerForm.classList.add('hidden');

                loginBtn.classList.add('border-blue-500', 'text-blue-500');
                loginBtn.classList.remove('border-gray-300', 'text-white');

                registerBtn.classList.add('border-gray-300', 'text-white');
                registerBtn.classList.remove('border-blue-500', 'text-blue-500');
            } else {
                registerForm.classList.remove('hidden');
                loginForm.classList.add('hidden');

                registerBtn.classList.add('border-blue-500', 'text-blue-500');
                registerBtn.classList.remove('border-gray-300', 'text-white');

                loginBtn.classList.add('border-gray-300', 'text-white');
                loginBtn.classList.remove('border-blue-500', 'text-blue-500');
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            const loginForm = document.getElementById("login-form");
            const registerForm = document.getElementById("register-form");

            if (loginForm) {
                loginForm.addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const email = document.getElementById("login-email").value;
                    const password = document.getElementById("login-password").value;

                    const response = await fetch('/api/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ email, password }),
                    });

                    const result = await response.json();
                    if (response.ok) {
                        alert('Login successful!');
                        window.location.href = '/dashboard';
                    } else {
                        alert(result.message || 'Login failed');
                    }
                });
            }

            if (registerForm) {
                registerForm.addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const username = document.getElementById("register-username").value;
                    const email = document.getElementById("register-email").value;
                    const password = document.getElementById("register-password").value;
                    const firstName = document.getElementById("register-firstName").value;
                    const lastName = document.getElementById("register-lastName").value;

                    const response = await fetch('/api/register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ username, email, password, firstName, lastName }),
                    });

                    const result = await response.json();
                    if (response.ok) {
                        alert('Registration successful!');
                        window.location.href = '/login';
                    } else {
                        alert(result.message || 'Registration failed');
                    }
                });
            }
        });
    </script>
{% endblock %}
